    <li data-filter="*" class="filter-active" style="font-size:medium">(All Service)</li>
    <br />-->
            <div class="row" data-aos="fade-up" data-aos-delay="100">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters" class="portfolio-flters" data-aos="fade-up" data-aos-delay="100">

                        <li data-filter="*" class="filter-active" style="font-size:medium">All</li>
                        @foreach (var item in Model)
                        {

                            <li data-filter=".filter-remodeling" style="font-size:medium">
                                @Html.DisplayFor(modelItem => item.Service_name, new { @class = "mb-0 text-sm" })

                            </li>

                        }
                    </ul>
                </div>
            </div>
            @*@foreach ( var type in Model.Select(m =>m.Service_owners. ))*@


