            <li data-filter=".filter-repairs" style="font-size:medium">(Electricity Extension-Sewage extension-Water extension)</li>
            <li data-filter=".filter-design" style="font-size:medium">(Interior Decoration-Wall painting)</li>
            </ul>--><!-- End Projects Filters -->



            <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item @Html.DisplayFor(modelItem => item.Servic_image)">
                        <div class="portfolio-wrap">
                            <img src="~/assetsUser/img/portfolio/@Html.DisplayFor(modelItem => item.Servic_image)" class="img-fluid" alt="@Html.DisplayFor(modelItem => item.Service_name)">
                            <div class="portfolio-info">
                                <!-- <h4>App 1</h4> -->
                                <p>
                                    @Html.DisplayFor(modelItem => item.Servic_image)
                                </p>
                                <div class="portfolio-links">
                                    <a href="~/assetsUser/img/portfolio/@Html.DisplayFor(modelItem => item.Servic_image)" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@Html.DisplayFor(modelItem => item.Service_name)"><i class="bx bx-plus"></i></a>
                                    <a href="/photographers/PhotographerProfile/@Html.DisplayFor(modelItem => item.Id)" title="Go to the photographer's page" target="_blank"><i class="bx bx-link"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


            <br />

            <a href="https://localhost:44305/Service_owners/Index" title="More Details" class="btn btn-outline-primary btn-sm" style=" color:white;   background: linear-gradient(45deg, rgb(19 94 148 / 80%), rgb(224 213 213 / 80%));margin-left:40%; font-size:larger"> رؤية صفحات اصحاب الخدمات</a>

