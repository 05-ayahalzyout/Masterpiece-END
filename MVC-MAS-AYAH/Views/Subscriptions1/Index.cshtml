@model IEnumerable<MVC_MAS_AYAH.Subscription>

@{
    ViewBag.Title = "جدول الاشتراكات";
}
@{
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="col-12">
    <div class="card mb-4">
        <div class="card-header pb-0">
            <h6>جدول الاشتراكات</h6>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">التاريخ بداية الاشتراك </th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"> مدة الاشتراك بالاشهر</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">المبلغ المطلوب </th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"> التاريخ نهاية الاشتراك  </th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"> المبلغ الذي تم دفعة  </th>



                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div>
                                        @*<img src="../assets/img/team-3.jpg" class="avatar avatar-sm me-3" alt="user2">*@
                                        @Html.DisplayFor(modelItem => item.First_Last_Day, new { @class = "avatar avatar-sm me-3" })
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column justify-content-center">
                                        @*<h6 class="mb-0 text-sm">Alexa Liras</h6>*@
                                        @Html.DisplayFor(modelItem => item.Subtype, new { @class = "d-flex flex-column justify-content-center" })
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column justify-content-center">
                                        @*<h6 class="mb-0 text-sm">Alexa Liras</h6>*@
                                        @Html.DisplayFor(modelItem => item.Amount, new { @class = "d-flex flex-column justify-content-center" })

                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex flex-column justify-content-center">
                                        @*<h6 class="mb-0 text-sm">Alexa Liras</h6>*@
                                        @Html.DisplayFor(modelItem => item.Condition, new { @class = "d-flex flex-column justify-content-center" })

                                    </div>
                                </td>
                                <td>
                                    
                                        @*<h6 class="mb-0 text-sm">Alexa Liras</h6>*@
                                        @Html.DisplayFor(modelItem => item.Service_owners.Number, new { @class = "d-flex flex-column justify-content-center" })

                                </td>

                                <td class="align-middle text-center text-sm" style="color:red!important">
                                    @*<span class="badge badge-sm bg-gradient-secondary">Offline</span>*@
                                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "badge badge-sm bg-gradient-secondary" })

                                </td>
                                <td class="align-middle text-center">
                                    @*<span class="text-secondary text-xs font-weight-bold">11/01/19</span>*@
                                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "text-secondary text-xs font-weight-bold" }) |

                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>