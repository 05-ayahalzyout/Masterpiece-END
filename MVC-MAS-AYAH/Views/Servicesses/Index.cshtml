@model IEnumerable<MVC_MAS_AYAH.Servicess>

@{
    ViewBag.Title = "جدول الخدمات";
}
@{
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<p>
    @Html.ActionLink("انشاء جديد", "Create")
</p>



<div class="col-12">
    <div class="card mb-4">
        <div class="card-header pb-0">
            <h6>جدول الخدمات</h6>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">الخدمة</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">تفاصيل الخدمة</th>
                            
                            <th class="text-secondary opacity-7"></th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                            @*<img src="../assets/img/team-3.jpg" class="avatar avatar-sm me-3" alt="user2">*@
                                            <img src="~/images/@item.Servic_image" width="50" height="50" class="avatar avatar-sm me-3" />
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            @*<h6 class="mb-0 text-sm">Alexa Liras</h6>*@
                                            @Html.DisplayFor(modelItem => item.Service_name , new {@class="mb-0 text-sm"})

                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @*<p class="text-xs font-weight-bold mb-0">Programator</p>
        <p class="text-xs text-secondary mb-0">Developer</p>*@
                                    @Html.DisplayFor(modelItem => item.Description , new {@class="text-xs font-weight-bold mb-0"})

                                </td>
                                <td class="align-middle text-center text-sm" style="color:red!important">
                                    @*<span class="badge badge-sm bg-gradient-secondary">Offline</span>*@
                                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "badge badge-sm bg-gradient-secondary" })

                                </td>
                                <td class="align-middle text-center">
                                    @*<span class="text-secondary text-xs font-weight-bold">11/01/19</span>*@
                                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id } , new {@class="text-secondary text-xs font-weight-bold"}) |

                                </td>
                                <td class="align-middle">
                                    @*<a href="javascript:;" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="تعديلuser">
            Edit
        </a>*@
                                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id } , new {@class="text-secondary font-weight-bold text-xs"}) |

                                </td>
                            </tr>
                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

